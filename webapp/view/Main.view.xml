<mvc:View controllerName="sap.ui.demo.CoolApp.controller.Main" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Button 
		id="buttonHello" 
		text="{i18n>helloButtonText}" 
		press="onShowHello"/>
	<Input 
		id="inputHello"
		value="{/recipient/name}"
		description= "Hello {/recipient/name}"
		valueLiveUpdate ="true"
		width="60%" />
</mvc:View>